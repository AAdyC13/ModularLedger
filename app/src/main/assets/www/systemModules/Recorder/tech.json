{
	"permissions": ["registerPages", "registerElements", "registerComponents"],
	"registerPages": [
		{
			"pageID": "systemPage.Recorder",
			"html_layout": "page/Recorder.html",
			"css_template": "page/Recorder.css",
			"page_options": {
				"allowReplaceElements": true,
				"allowAddComponents": true,
				"allowGlobalComponents": true
			},
			"registerFreeElements": [
				{
					"selector": "#id",
					"options": {
						"changeInnerTEXT": true,
						"changeID": true
					}
